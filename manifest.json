{
  "name": "Paper2Notion",
  "version": "0.1.0",
  "manifest_version": 3,
  "default_locale": "en",

  "description": "__MSG_extDesc__",

  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.notion.com/*",
    "https://*.semanticscholar.org/*"
  ]
}
